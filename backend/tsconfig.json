{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es2020",
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@errors/*": ["api/errors/*"],
      "@services/*": ["services/*"],
      "@helpers/*": ["helpers/*"],
      "@repositories/*": ["repositories/*"],
      "@models/*": ["models/*"]
    }
  },
  "include": ["src/**/*"]
}
